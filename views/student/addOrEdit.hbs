<div style="padding-left:250px">
<h3>Issue a book</h3>

<form action="/student" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{student._id}}">
    <div class="form-group">
        <label>Full Name</label>
        <input type="text" class="form-control" name="fullName" style="width: 400px;" placeholder="Full Name" value="{{student.fullName}}">
        <div class="text-danger">
            {{student.fullNameError}}</div>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" style="width: 400px;" placeholder="Email" value="{{student.email}}">
        <div class="text-danger">
            {{student.emailError}}</div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Mobile</label>
            <input type="text" class="form-control" name="mobile" style="width: 400px;" placeholder="Mobile" value="{{student.mobile}}">
        </div>
        <div class="form-group col-md-6" style="margin-left:-60px;">
            <label>Date of Issue</label>
            <input type="text" class="form-control" name="doi" style="width: 400px;"placeholder="DateOfIssue" value="{{student.doi}}">
        </div>
      </div>
        <div class="form-row">
          <div class="form-group col-md-6">
              <label>Book Name</label>
              <input type="text" class="form-control" name="book" style="width: 400px;" placeholder="BookName" value="{{student.book}}">
          </div>
          <div class="form-group col-md-6" style="margin-left:-60px;">
                <label>Author Name</label>
                <input type="text" class="form-control" name="author" style="width: 400px;" placeholder="AuthorName" value="{{student.author}}">
          </div>
       </div>
       <div class="form-row">
         <div class="form-group" style="padding-left: 300px;">
             <button
             style="background-color:green;
             color:white;
             padding:12px 25px;
             text-align:center;
             text-decoration:none;
             display:inline-block;
             border:0px solid transparent;
             font-size:12px"type="submit">Submit</button>
             <a style="background-color:green;
             color:white;
             padding:12px 25px;
             text-align:center;
             text-decoration:none;
             display:inline-block;
             font-size:12px" class="button" href="/student/list">View all issued books</a>
         </div>
       </div>
</form>
</div>
